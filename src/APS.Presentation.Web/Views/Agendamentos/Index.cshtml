@model IEnumerable<APS.Application.ViewModel.Agendamentos.CadastroViewModel>
@{
    ViewBag.Title = "Listagem Agendamento";
}
<section class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>
</section>
<section class="row">
    <div class="col-lg-12">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <a href="@Url.Action("Cadastrar")"><i class="fa fa-plus fa-fw" aria-hidden="true"></i> Agendar</a>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover listagem">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th>Cliente</th>
                                <th>Data</th>
                                <th>Endereço</th>
                                <th>Descrição</th>
                                <th>Preço</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Atualizar", new { id = item.Id})" class="btn btn-primary btn-circle" title="Editar">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="javascript:void(0)" data-id="@item.Id" class="btn-excluir btn btn-danger btn-circle" title="Excluir">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                    <td>@item.Cliente</td>
                                    <td>@item.Data - @item.HoraInicial as @item.HoraFinal</td>
                                    <td>@item.Endereco</td>
                                    <td>@item.Descricao</td>
                                    <td>@item.Preco.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script>
        $(document).ready(function () {
            $(".btn-excluir").on('click', function() {
                App.excluir({
                    id: $(this).data('id'),
                    url: "@Url.Action("Excluir")",
                    urlRedirecionar: "@Url.Action("Index")"
                });
            });
        });
    </script>
}
